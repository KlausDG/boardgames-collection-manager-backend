generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["relationJoins"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?

  boardgames Boardgame[]

  @@map("users")
}

model Boardgame {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name            String  @unique
  thumbnail       String
  description     String?
  yearPublished   String?
  language        String?
  minPlayers      Int?
  maxPlayers      Int?
  bestPlayerCount Int?
  minPlaytime     Int?
  maxPlaytime     Int?
  weight          Float?
  bggRank         Int?
  bggLink         String?
  inCollection    Boolean @default(true)
  // Add category
  // Add purchased value

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  designerId Int
  designer   Designer @relation(fields: [designerId], references: [id], onDelete: Cascade)

  @@map("boardgames")
}

model Designer {
  id   Int    @id @default(autoincrement())
  name String @unique

  Boardgame Boardgame[]

  @@map("designers")
}
