generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash  String

  firstName String?
  lastName  String?

  boardgames Boardgame[]

  @@map("users")
}

model Boardgame {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name               String @unique
  thumbnail          String
  description        String
  yearPublished      String?
  minPlayers         Int?
  maxPlayers         Int?
  bestPlayers_amount Int?
  minPlaying_time    Int?
  maxPlaying_time    Int?
  weight             Float?
  bggRank            Int?
  bggLink            String?

  userId Int
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  designerId Int
  designer   Designer @relation(fields: [designerId], references: [id], onDelete: Cascade)

  @@map("boardgames")
}

model Designer {
  id        Int         @id @default(autoincrement())
  name      String

  Boardgame Boardgame[]

  @@map("designers")
}
